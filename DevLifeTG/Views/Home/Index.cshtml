@{
    ViewBag.Title = "Home Page";
}

<div data-ng-controller="highScoreController" class="container">
    <div class="row">
        <div class="col-md-12">
            <strong class="error">{{error}}</strong>
            <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary">Add New</a></p>
            <form name="addHighScore" data-ng-show="addMode" style="width:600px;margin:0px auto;">
                <div class="form-group">
                    <label for="pname" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="pname" placeholder="Enter Username" data-ng-model="newhighscore.Username" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="pscore" class="col-sm-2 control-label">Score</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="pscore" placeholder="Enter Score" data-ng-model="newhighscore.Score" required />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Add" data-ng-click="add()" data-ng-disabled="!addHighScore.$valid" class="btn btn-primary" />
                        <input type="button" value="Cancel" data-ng-click="toggleAdd()" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <br />
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" style="width:800px">
                    <tr>
                        <td>Username</td>
                        <th>Score</th>
                    </tr>
                    <tr data-ng-repeat="data in highScores">
                        <td>
                            <p data-ng-hide="editMode">{{ data.UserName }}</p>
                            <input data-ng-show="editMode" type="text" data-ng-model="highScore.UserName" ng-value="{{ data.Username }}" />
                        </td>
                        <td>
                            <p data-ng-hide="editMode">{{ data.Score }}</p>
                            <input data-ng-show="editMode" type="text" data-ng-model="highScore.Score" ng-value="{{ data.Score }}" />
                        </td>
                        <td>
                            <p data-ng-hide="editMode"><a data-ng-click="editMode = true;" href="javascript:;">Edit</a> | <a data-ng-click="deletehighscore(data)" href="javascript:;">Delete</a></p>
                            <p data-ng-show="editMode"><a data-ng-click="save(data); editMode = false" href="javascript:;">Save</a> | <a data-ng-click="editMode = false";" href="javascript:;">Cancel</a></p>
                        </td>
                    </tr>
                </table>
                <hr />
            </div>
        </div>
    </div>
    <div id="spinner" data-ng-show="loading">
        <img src="Images/ajax-loader.gif" class="ajax-loader" />
    </div>
</div>
